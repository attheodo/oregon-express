{
    "server": {
        "port": 4000
    },

    "logging": {

        "express": {
            "console": {
                "level"   : "debug",
                "colorize": true
            }
        }

    },

    "locomotiv": {
        "routesPath"      : "./routes",
        "controllersPath" : "./controllers",
        "middlewarePath"  : "./middlewares",
        "defaultAction"   : "index",
        "verbose"         : true
    },

    "tender": {

        "modelsPath": "/models",

        "migrate": "drop",

        "exposeGlobally": true,

        "verbose": true,

        "waterline": {
            "connections": {
                "defaultDatabase": {
                    "adapter" : "sails-postgresql",
                    "host"    : "localhost",
                    "user"    : "attheodo",
                    "password": "",
                    "database": ""
                }
            }
        }

    }
}
